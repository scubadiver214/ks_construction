#portfolioModal3.portfolio-modal.modal.fade(tabindex='-1', role='dialog', aria-hidden='true')
    .modal-dialog
        .modal-content
            .close-modal(data-bs-dismiss='modal')
                img(src='assets/img/close-icon.svg', alt='Close modal')
            .container
                .row.justify-content-center
                    .col-lg-8
                        .modal-body
                            // Project details
                            h2.text-uppercase Home Kitchen Remodal
                            p.item-intro.text-muted KS Construction will remodal your entire kitchen!
                            img.img-fluid.d-block.mx-auto(src='assets/img/photos/kitchen/IMG_2031.jpg', alt='...')
                            img.img-fluid.d-block.mx-auto(src='assets/img/photos/kitchen/IMG_2032.jpg', alt='...')
                            img.img-fluid.d-block.mx-auto(src='assets/img/photos/kitchen/IMG_2033.jpg', alt='...')
                            img.img-fluid.d-block.mx-auto(src='assets/img/photos/kitchen/IMG_2034.jpg', alt='...')
                            img.img-fluid.d-block.mx-auto(src='assets/img/photos/kitchen/IMG_2035.jpg', alt='...')
                            img.img-fluid.d-block.mx-auto(src='assets/img/photos/kitchen/IMG_2036.jpg', alt='...')
                            ul.list-inline
                                li
                                    strong Client:
                                    | Finish
                                li
                                    strong Category:
                                    | Identity
                            button.btn.btn-primary.btn-xl.text-uppercase(data-bs-dismiss='modal', type='button')
                                i.fas.fa-times.me-1
                                | Close Project
